# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Redis Configuration
# For local development with docker-compose
REDIS_URL=redis://redis:6379/0

# For Railway, this will be provided automatically by Railway Redis plugin
# REDIS_URL=redis://default:password@railway-redis-host:6379

# Cache URL (optional, defaults to REDIS_URL with different database)
# CACHE_URL=redis://redis:6379/1

# Celery Configuration (optional, uses REDIS_URL by default)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0
